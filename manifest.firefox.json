{
	"manifest_version": 3,
	"name": "TidalExt",
	"version": "1.7",
	"description": "〜ヽ(⌐￭_￭)ノ♪♬",
	"author": "Nico Pr",
	"homepage_url": "https://github.com/nicopowa/tidalext",
	"action": {
		"default_popup": "popup.html",
		"default_title": "TidalExt"
	},
	"permissions": ["storage", "downloads", "webRequest", "tabHide"],
	"host_permissions": ["https://*.tidal.com/*"],
	"background": {
		"scripts": ["tidalext.js"],
		"type": "module"
	},
	"content_scripts": [
		{
			"matches": ["https://tidal.com/*"],
			"js": ["content.js"],
			"run_at": "document_start",
			"all_frames": false
		}
	],
	"web_accessible_resources": [
		{
			"matches": ["https://tidal.com/*"],
			"resources": ["inject.js"]
		}
	],
	"commands": {
		"reload": {
			"suggested_key": {
				"default": "Alt+T"
			},
			"description": "reload"
		}
	},
	"browser_specific_settings": {
		"gecko": {
			"id": "@TidalExt",
			"data_collection_permissions": {
				"required": ["none"]
			}
		}
	}
}
